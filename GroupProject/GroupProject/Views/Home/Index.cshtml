                Japan: null,
                India: null,

            },
        });
    });
    document.addEventListener("DOMContentLoaded", function () {
        var elems = document.querySelectorAll(".slider");
        var instances = M.Slider.init(elems, {
            indicators: false,
            height: 600,
            duration: 700,
        });
    });
    M.AutoInit();</script>